{
  "name": "itsa",
  "version": "2.1.41",
  "description": "JavaScript data validation",
  "keywords": [
    "validation",
    "schema",
    "typescript"
  ],
  "main": "dist/itsa.js",
  "types": "dist/itsa.d.ts",
  "scripts": {
    "coverage": "rm -rf .coverage/* && TS_NODE_PROJECT='./tsconfig.test.json' nyc mocha",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' mocha --reporter utils/reporter.js --parallel --exit",
    "build": "rm -rf ./dist/* && rollup -c && rm -rf ./dist/types",
    "bump-patch": "npm --no-git-tag-version version patch && git add package.json package-lock.json && exit 0",
    "release": "rake release"
  },
  "pre-commit": [
    "bump-patch"
  ],
  "author": "Josh Wright <josh@joshwright.com> (https://www.joshwright.com/)",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-replace": "2.4.2",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "rollup": "2.47.0",
    "rollup-plugin-dts": "3.0.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  }
}
