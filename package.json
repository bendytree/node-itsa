{
  "name": "itsa",
  "version": "1.0.5",
  "description": "itsa is a JavaScript library that validates JavaScript data",
  "main": "dist/itsa.js",
  "scripts": {
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' mocha --reporter utils/reporter.js --parallel --watch src",
    "build": "rm -rf ./dist/* && rollup -c && rm -rf ./dist/types",
    "bump-patch": "npm --no-git-tag-version version patch && git add package.json package-lock.json && exit 0"
  },
  "pre-commit": [
    "bump-patch"
  ],
  "author": "Josh Wright <josh@joshwright.com> (https://www.joshwright.com/)",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-replace": "2.4.2",
    "mocha": "8.4.0",
    "pre-commit": "1.2.2",
    "rollup": "2.47.0",
    "rollup-plugin-dts": "3.0.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  }
}
