{
  "name": "itsa",
  "version": "2.1.47",
  "description": "JavaScript data validation",
  "keywords": [
    "validation",
    "schema",
    "typescript"
  ],
  "main": "dist/itsa.js",
  "types": "dist/itsa.d.ts",
  "scripts": {
    "coverage": "rm -rf .coverage/* && TS_NODE_PROJECT='./tsconfig.test.json' nyc mocha",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' mocha --reporter utils/reporter.js --parallel --exit",
    "build": "node utils/build",
    "bump-patch": "npm --no-git-tag-version version patch && git add package.json package-lock.json && exit 0",
    "release": "rake release"
  },
  "pre-commit": [
    "bump-patch"
  ],
  "author": "Josh Wright <josh@joshwright.com> (https://www.joshwright.com/)",
  "license": "MIT",
  "devDependencies": {
    "@types/assert": "1.5.4",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  }
}
